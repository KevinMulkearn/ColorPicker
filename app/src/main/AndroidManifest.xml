<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mulkearn.kevin.colorpicker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:label="RGB Picker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AboutActivity"
            android:theme="@style/AboutStyle">
        </activity>
        <activity
            android:name=".hsvActivity"
            android:label="HSV Picker">
        </activity>
        <activity
            android:name=".SavedColorActivity"
            android:label="Saved Colors">
        </activity>
        <activity
            android:name=".HexActivity"
            android:label="Hex Picker">
        </activity>
    </application>

</manifest>