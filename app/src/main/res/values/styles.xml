<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/hexAccent</item>
    </style>

    <style name="AboutStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/about_background</item>
    </style>

    <style name="ImageActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/imagePrimary</item>
        <item name="colorPrimaryDark">@color/imagePrimaryDark</item>
        <item name="colorAccent">@color/imageAccent</item>
    </style>

    <style name="SavedColorActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/savedColorPrimary</item>
        <item name="colorPrimaryDark">@color/savedColorPrimaryDark</item>
        <item name="colorAccent">@color/savedColorAccent</item>
    </style>

    <style name="WebActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/webPrimary</item>
        <item name="colorPrimaryDark">@color/webPrimaryDark</item>
        <item name="colorAccent">@color/webAccent</item>
    </style>

</resources>
