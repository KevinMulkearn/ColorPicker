<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.mulkearn.kevin.colorpicker.MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/app_name"
        android:textColor="#BB39EAB8"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center_horizontal|center_vertical"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/rgbActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="RGB"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_horizontal|center_vertical"
        android:background="#BB39EAB8"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:onClick="rgbActivityStart"/>

    <TextView
        android:id="@+id/hsvActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="HSV"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_horizontal|center_vertical"
        android:background="#BB39EAB8"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:onClick="hsvActivityStart"/>

    <TextView
        android:id="@+id/hexActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Hex"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_horizontal|center_vertical"
        android:background="#BB39EAB8"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:onClick="hexActivityStart"/>

    <TextView
        android:id="@+id/savedActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/saved_colors"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_horizontal|center_vertical"
        android:background="#BB39EAB8"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:onClick="savedActivityStart"/>

    <TextView
        android:id="@+id/aboutActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/about"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_horizontal|center_vertical"
        android:background="#BB39EAB8"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:onClick="aboutActivityStart"/>

</LinearLayout>
