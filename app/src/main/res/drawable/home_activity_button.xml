<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="5dp"
                android:color="#BB212121"
                android:dashWidth="0dp"
                android:dashGap="0dp"/>
            <corners
                android:radius="5dp" />
            <solid
                android:color="#2CB7DE"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="5dp"
                android:color="#BB212121"
                android:dashWidth="0dp"
                android:dashGap="0dp"/>
            <corners
                android:radius="5dp" />
            <solid
                android:color="#2CB7DE"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="5dp"
                android:color="#BB212121"
                android:dashWidth="0dp"
                android:dashGap="0dp"/>
            <corners
                android:radius="5dp" />
            <gradient
                android:startColor="#176175"
                android:centerColor="#2CB7DE"
                android:endColor="#176175"
                android:angle="0" />
        </shape>
    </item>

</selector>